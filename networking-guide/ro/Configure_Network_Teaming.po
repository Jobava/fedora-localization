"   \"runner\": {\n"
"       \"name\": \"lacp\",\n"
"       \"active\": true,\n"
"       \"fast_rate\": true,\n"
"       \"tx_hash\": [\"eth\", \"ipv4\", \"ipv6\"]\n"
"   },\n"
"     \"link_watch\": {\"name\": \"ethtool\"},\n"
"     \"ports\": {\"em1\": {}, \"em2\": {}}\n"
"}"
